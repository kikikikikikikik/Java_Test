import java.util.Scanner;
import java.lang.String;
public class Library {
    public static void main(String[] args) throws Exception{
        Scanner scanner=new Scanner(System.in);
        System.out.println("欢迎来到图书管理系统");
        System.out.println("1.添加		    2.修改		3.删除		    4.查询		5.借阅");
        System.out.println("6.借阅信息查询	7.归还		8.归还信息查询	9.排序		10.退出");
        System.out.println("请选择：");
        int n=scanner.nextInt();
        scanner.nextLine();
        switch(n){
            case 1:
                System.out.println("请输入要添加的书名：");
                String name=scanner.nextLine();
                System.out.println("请输入要添加的编号：");
                String bno=scanner.nextLine();
                System.out.println("请输入要添加的作者：");
                String author=scanner.nextLine();
                System.out.println("请输入要添加的出版社：");
                String publish=scanner.nextLine();
                System.out.println("请输入要添加的图书类型：");
                String type=scanner.nextLine();
                System.out.println("请输入要添加的存放位置：：");
                String storeplace=scanner.nextLine();
                System.out.println("请输入要添加的同名书的存放位置：");
                String storearea=scanner.nextLine();
                Book book = new Book(name,bno,author,publish,type,storeplace,storearea);
                int row=LibMange.add(book);
                if(row>0){
                    System.out.println("添加成功！");
                }
                else{
                    System.out.println("添加失败！");
                }
                break;
            case 2:
                System.out.println("请输入要修改书的编号：");
                String bno1=scanner.nextLine();
                Book book1=LibMange.selectById(bno1);
                System.out.println(book1);
                if(book1!=null){
                System.out.println("请输入要修改的书名：");
                String name1=scanner.nextLine();
                System.out.println("请输入要修改的作者：");
                String author1=scanner.nextLine();
                System.out.println("请输入要修改的出版社：");
                String publish1=scanner.nextLine();
                System.out.println("请输入要修改的图书类型：");
                String type1=scanner.nextLine();
                System.out.println("请输入要修改的存放位置：");
                String storeplace1=scanner.nextLine();
                System.out.println("请输入要修改的同名书的存放位置：");
                String storearea1=scanner.nextLine();
                book1.setName(name1);
                book1.setStorearea(storearea1);
                book1.setType(type1);
                book1.setPublish(publish1);
                book1.setAuthor(author1);
                book1.setStoreplace(storeplace1);
                int row1=LibMange.update(book1);
                if(row1>0){
                    System.out.println("修改成功！");
                    System.out.println(book1);
                }else{
                    System.out.println("修改失败！");
                }
                }else {
                    System.out.println("该图书不存在！");
                }
                break;
            case 3:
                /*Date date1=new Date();
                SimpleDateFormat sd=new SimpleDateFormat("yyyy-MM-dd HH:mm:ss");
                String now=sd.format(date1);
                System.out.println(now);
                int row1=LibMange.delete(date1);
                if(row1>0){
                    System.out.println("删除成功！");
                }else {
                    System.out.println("删除失败！");
                }
                break;*/
            case 4:
                System.out.println("请输入要查找的书名：");
                String name2=scanner.nextLine();
                Book book2=LibMange.selectByName(name2);
                if(book2!=null){
                    System.out.println(book2);
                }else{
                    System.out.println("该书不存在");
                }
        }
    }
}
